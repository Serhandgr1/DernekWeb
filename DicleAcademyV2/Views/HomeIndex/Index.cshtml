@model Tuple<SocietyHeaderDto,List<OurMissionDto>,List<LatestCausesDto>>
<div class="page">
    <!-- Page Header-->
    <section class="section section-lg section-main-bunner section-main-bunner-filter">
            <div class="main-bunner-img" style="background-image: url(/society/images/@Model.Item1.Image); background-size: cover;"></div>
            <div class="main-bunner-inner">
                <div class="container">
                    <div class="row row-50 justify-content-lg-center align-items-lg-center">
                        <div class="col-lg-12">
                            <div class="bunner-content-modern text-center">
                                <h1 class="main-bunner-title">@Model.Item1.Title</h1>
                                <p>@Model.Item1.Description</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </section>
    <section class="section section-xl">
        <div class="container">
            <div class="row row-50 justify-content-lg-between align-items-lg-center">
                <div class="col-lg-6">
                    <div class="box-img-animate">
                        @foreach(var item2 in Model.Item2)
                        {
                            <div class="box-img-animate-item" data-parallax-scroll="{&quot;y&quot;: 0, &quot;x&quot;: 140,  &quot;smoothness&quot;: 50 }"><img src="~/society/images/@item2.Image" alt=""></div>

                        }
                       
                         </div>
                </div>
                    <div class="col-lg-6 col-xl-5">
                        <div class="innset-xl-left-70">
                            <h3>Our Mission</h3>
                            <div class="row row-50">
                                @foreach (var item3 in Model.Item2)
                                {
                                <h4>@item3.Description</h4>
                                <div class="col-md-6 col-lg-12">
                                    <div class="box-icon-modern">
                                        <div class="box-icon-inner decorate-triangle"><img src="~/society/images/@item3.Image" alt=""> </div>
                                        <div class="box-icon-caption" >
                                            <h4><a href="#">@item3.SkillTitle</a></h4>
                                            <p class="text-opacity-80">@item3.SkillDescription </p>
                                            <p>@item3.SkillDescription</p>
                                        </div>
                                    </div>
                                </div>}
                            </div>
                        </div>
                    </div>
            </div>
        </div>
    </section>
    <section class="section section-lg bg-gray-1">
        <div class="container">
            <div class="row justify-content-center text-center">
                <div class="col-md-9 col-lg-7 wow-outer">
                    <div class="wow slideInDown">
                        <h3>Latest Causes</h3>
                        <p>At Helper, there are various charity causes and projects, in which you can always take part. Feel free to learn about them below or browse our website for more information.</p>
                    </div>
                </div>
            </div>
            <div class="row row-50">
                @foreach(var item4 in Model.Item3)
                {
                    <div class="col-md-6 col-lg-4 wow-outer">
                        <div class="wow fadeInUp">
                            <article class="box-causes">
                                <div class="box-causes-img">

                                    <img src="~/society/images/@item4.Image" alt="" width="372" height="396" /><a class="button button-sm button-primary" href="#">Donate</a>
                                </div>
                                <h4 class="font-weight-medium"><a href="#">@item4.Title</a></h4>
                                <p>@item4.Description</p>
                                <p class="box-causes-donate">
                                    <span class="box-causes-donate-complete">@item4.Price</span> of <span>$100,000</span> raised
                                </p>
                            </article>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>


    <section class="parallax-container bg-gray-600" data-parallax-img="/society/images/parallax-img-2.jpg">
        <div class="parallax-content section-xxl text-center">
            <div class="container">
                <div class="row justify-content-md-center">
                    <div class="col-md-9 col-lg-8 col-xl-8 wow-outer">
                        <div class="innset-xl-right-30 innset-xl-left-30">
                            <div class="wow slideInDown">
                                <h3>Subscribe to Stay Informed</h3>
                                <form asp class="rd-form rd-mailform rd-form-inline" data-form-output="form-output-global" data-form-type="subscribe" method="post" action="HomeIndex/AddSub">
                                    <div class="form-wrap">
                                        <input class="form-input" id="subscribe-form-email" type="email" name="ClientMail" data-constraints="@@Email @@Required">
                                        <label class="form-label" for="subscribe-form-email">Your E-mail</label>
                                    </div>
                                    <div class="form-button">
                                        <button class="button button-primary button-lg" type="submit">Subscribe</button>
                                    </div>
                                </form>
                            </div>
               
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<div class="preloader">
    <div class="preloader-body">
        <p>Loading...</p>
    </div>
</div>
