@model OurTeamDto

<!-- Begin page -->
<!-- Start Content-->
<div class="container-fluid">

    <!-- start page title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Admin</a></li>
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Our Team</a></li>
                        <li class="breadcrumb-item active">Our Team Güncelle</li>
                    </ol>
                </div>
                <h4 class="page-title">Our Team Güncelle</h4>
            </div>
        </div>
    </div>
    <!-- end page title -->

    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="header-title">Our Team</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive-sm">
                        <table class="table table-striped table-centered mb-0">
                            <form method="post" action="/OurTeamSociety/UpdateOurTeam" enctype="multipart/form-data">
                            <tr>
                                <td>Title</td>

                                <td><input style="width: 100%; max-width: 100%; resize: vertical;" type="text" name="Title" value="@Model.Title"></td>
                            </tr>

                            <tr>
                                <td>Description</td>

                                <td>
                                    <textarea name="Description" style="width: 100%; max-width: 100%; min-height: 100px; resize: vertical;">@Model.Description
                                        </textarea>
                                </td>
                            </tr>
                            <tr>
                                <td>Image</td>
                                <td class="table-user">
                                    <img src="~/society/images/@Model.Image" alt="table-user"
                                         class="me-2 rounded-circle" />
                                </td>
                                <td>
                                    <input type="file" name="formFile" class="form-control-file">
                                </td>
                            </tr>
                            <tr>
                                <td></td>
                                <td></td>
                                <td style="text-align: right;">
                                    <input type="hidden" name="Id" value="@Model.Id" />
                                    <button type="submit" class="btn btn-link text-reset fs-16 px-1">Onayla</button>
                                </td>
                            </tr>
                            </form>
                        </table>
                    </div> <!-- end table-responsive-->
                </div>
            </div> <!-- end card -->
        </div><!-- end col-->
    </div>
    <!-- end row-->
</div> <!-- container -->
<!-- end Footer -->


<script>
    var data = document.getElementById("bag").value;
    console.log("DATA " + data);
    if (data == "Başarılı") {
        swal("İşleminiz başarı ile gerçekleşti", {
            icon: "success",
            button: "Tamam!",
        });
    } else if (data == "Başarısız") {
        swal("Hata oluştu daha sonra tekrar deneyin!", {
            icon: "error",
            button: "Tamam!",
        });
    }
</script>
