@model SocialMediaDto
<!-- Begin page -->
<!-- Start Content-->
<div class="container-fluid">

    <!-- start page title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Admin</a></li>
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Social Media</a></li>
                        <li class="breadcrumb-item active">Social Media Göster</li>
                    </ol>
                </div>
                <h4 class="page-title">Social Media Göster</h4>
            </div>
        </div>
    </div>
    <!-- end page title -->

    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="header-title">Social Media</h4>
                    <!--
                    <p class="text-muted mb-0">
                        Use <code>.table-striped</code> to add zebra-striping to any table row
                        within the <code>&lt;tbody&gt;</code>.
                    </p>
                    -->
                </div>
                <div class="card-body">
                    <div class="table-responsive-sm">
                        <table class="table table-striped table-centered mb-0">
                            <form method="post" action="/FooterSociety/UpdateFooter">
                            <tr>
                                <td>Twitter</td>
                                <td><input name="Twitter" value="@Model.Twitter"></td>
                            </tr>
                            <tr>
                                <td>Facebook</td>
                                <td><input name="Facebook" value="@Model.Facebook"></td>
                            </tr>
                            <tr>
                                <td>İnstagram</td>
                                <td><input name="İnstagram" value="@Model.İnstagram"></td>
                            </tr>
                            <tr>
                                <td>Youtube</td>
                                <td><input name="Youtube" value="@Model.Youtube"></td>
                            </tr>
                            <tr>
                                <td></td>
                                <td></td>
                                <td style="text-align: right;">
                                    <input type="hidden" name="Id" value="@Model.Id" />
                                    <button type="submit" class="btn btn-link text-reset fs-16 px-1">Onayla</button>
                                </td>
                            </tr>
                            </form>
                        </table>
                    </div> <!-- end table-responsive-->

                </div>
            </div> <!-- end card -->
        </div><!-- end col-->
    </div>
    <!-- end row-->
</div> <!-- container -->
<!-- end Footer -->


<script>
    var data = document.getElementById("bag").value;
    console.log("DATA " + data);
    if (data == "Başarılı") {
        swal("İşleminiz başarı ile gerçekleşti", {
            icon: "success",
            button: "Tamam!",
        });
    } else if (data == "Başarısız") {
        swal("Hata oluştu daha sonra tekrar deneyin!", {
            icon: "error",
            button: "Tamam!",
        });
    }
</script>
