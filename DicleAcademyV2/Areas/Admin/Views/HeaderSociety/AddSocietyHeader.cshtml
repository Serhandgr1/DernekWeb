
<div class="container-fluid">

    <!-- start page title -->
    <div class="row">
        <div class="col-12">
            <div class="page-title-box">
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="javascript: void(0);">Admin</a></li>
                        <li class="breadcrumb-item"><a href="javascript: void(0);">SocietyHeader</a></li>
                        <li class="breadcrumb-item active">SocietyHeader Ekle</li>
                    </ol>
                </div>
                <h4 class="page-title">SocietyHeader Ekle</h4>
            </div>
        </div>
    </div>
    <!-- end page title -->

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="header-title">SocietyHeader</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <form method="post" action="/HeaderSociety/AddHeader" enctype="multipart/form-data">
                                <div class="mb-3">
                                    <label for="Title">Title</label>
                                    <input type="text" class="form-control" id="Title" name="Title">
                                </div>
                                <div class="mb-3">
                                    <label for="Description">Description</label>
                                    <input type="text" class="form-control" id="Description" name="Description">
                                </div>
                                <div class="mb-3">
                                    <label for="formFile">Image</label>
                                    <input type="file" class="form-control" id="formFile" name="formFile">
                                </div>
                                <div style="text-align: right;">
                                    <button type="submit" class="btn btn-primary">Ekle</button>
                                </div>
                            </form>
                        </div> <!-- end col -->
                    </div> <input value="@ViewBag.Message" id="bag" style="display:none;" />
                    </div> <!-- end row-->
                </div> <!-- end card-body -->
            </div> <!-- end card -->
        </div><!-- end col -->
    </div><!-- end row -->
</div> <!-- container -->
<script>
    var data = document.getElementById("bag").value;
    console.log("DATA " + data);
    if (data == "Başarılı") {
        swal("İşleminiz başarı ile gerçekleşti", {
            icon: "success",
            button: "Tamam!",
        });
    } else if (data == "Başarısız") {
        swal("Hata oluştu daha sonra tekrar deneyin!", {
            icon: "error",
            button: "Tamam!",
        });
    }
</script>
